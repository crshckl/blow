{
  "manifest_version": 3,
  "name": "Productivity Assistant with AI",
  "description": "Manage tasks and get AI-powered suggestions for productivity.",
  "version": "1.1",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/blow16.png",
      "48": "icons/blow48.png",
      "128": "icons/blow128.png"
    }
  }
}
